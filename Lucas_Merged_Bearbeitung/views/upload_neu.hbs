<div class="row">
    <div class="col-md-6 offset-md-3">
        <form class="fileupload" action="media/uploadFile" method="post" enctype="multipart/form-data">
            <div class="md-form">
                <div class="file-field">
                    <div class="btn btn-primary btn-sm float-left">
                        <span>Datei auswählen</span>
                        <input type="file">
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Bitte wählen sie eine Datei aus.">
                    </div>
                </div>
            </div>
        </form>

        <br>

        <!-- Auto-resizing textarea -->
        <div class="md-form">
            <textarea type="text" id="text2" class="md-textarea md-textarea-auto form-control" rows="2"></textarea>
            <label for="text2">Kommentar:</label>
        </div>

        <div class="text-center mt-4">
            <button class="btn btn-primary" type="submit">Upload</button>
        </div>
    </div>
</div>

<script type="text/javascript">
        function didUpload() {
            var file = document.getElementById("fileselect");
            var ausgabe = document.getElementById("ausgabefeld");
            ausgabe.innerHTML = ausgabe.innerHTML + file.files.item(0).name+" hochgeladen.\n"
        }
</script>